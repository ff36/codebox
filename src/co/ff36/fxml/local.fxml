<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.ff36.controller.LocalController">
    <children>
        <TreeView fx:id="tree"
                  styleClass="local-tree"
                  AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" text="%context_archive" onAction="#localDirectorySelected"/>
                        <MenuItem mnemonicParsing="false" text="%context_reload" onAction="#load"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TreeView>
    </children>
</AnchorPane>
